<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Client.Table">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Client"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainViewActivity"
            android:label="@string/title_activity_main_view"
            android:parentActivityName=".ui.login.LoginActivity"
            android:theme="@style/Theme.Client.NoActionBar" />
        <activity
            android:name=".ui.preferenceSearch.SearchPreferenceActivity"
            android:label="@string/title_activity_search_profile_view"
            android:parentActivityName=".MainViewActivity"
            android:theme="@style/Theme.Client.NoActionBar"/>
        <activity
            android:name=".ui.registration.RegistrationActivity"
            android:label="@string/title_activity_register_view"
            android:parentActivityName=".ui.login.LoginActivity"
            android:theme="@style/Theme.Client.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>